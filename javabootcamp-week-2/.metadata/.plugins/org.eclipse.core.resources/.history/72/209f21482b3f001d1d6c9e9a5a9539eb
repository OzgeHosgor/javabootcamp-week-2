
public class Product {
	
	//attribute ya da field
	private int _id;
	private String name;
	private String description;
	private double price;
	private int stockAmount;
	private String renk;
	private String kod;
	
	//yukarıda gizlediğimiz değeleri okuyabilmek için aşağıdaki dizilim kullanılır.
	//Aşağıdaki bloğa "GETTER" denir	
	public int getId() {
		return _id;
	}
	
	//Aşağıdaki bloğa "SETTER" denir
	public void setId(int id) {
		_id=id;
	}

}